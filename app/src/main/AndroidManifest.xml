<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nju.zhizaolian" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".activities.OrderDetailActivity"
            android:label="@string/title_activity_add_order_detail"
            android:parentActivityName=".activities.CustomListActivity" >
        </activity>
        <activity
            android:name=".activities.CustomListActivity"
            android:label="@string/title_activity_custom_list" >
        </activity>

        <service
            android:name=".service.MyService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".activities.CustomerManagerActivity"
            android:label="@string/customer_manager" >
        </activity>
        <activity
            android:name=".activities.OrderListActivity"
            android:label="@string/title_activity_order_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SalesMasterActivity"
            android:label="@string/title_activity_sales_master" >
        </activity>
        <activity
            android:name=".activities.DepartmentSalesActivity"
            android:label="@string/title_activity_sales_department" />
        <activity
            android:name=".activities.DepartmentFinancialActivity"
            android:label="@string/title_activity_department_financial" >
        </activity>
    </application>

</manifest>
