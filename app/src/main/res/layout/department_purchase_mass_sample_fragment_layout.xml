<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fabric_purchase"
        android:id="@+id/textView128"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/textView128"
        android:background="?android:attr/listDivider"
        android:id="@+id/view"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fabric_purchase_table"
        android:layout_below="@+id/view">
        <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/fabric_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/unit_m_cost"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/purchase_number"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/total_purchase_meter"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
        </TableRow>
        </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accessory_purchase"
        android:id="@+id/textView140"
        android:layout_below="@+id/fabric_purchase_table"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/textView140"
        android:background="?android:attr/listDivider"
        android:id="@+id/view2"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:id="@+id/accessory_purchase_table">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/accessory_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/accessory_per_cost_number"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/purchase_number"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/total_purchase_number"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase_relative"
        android:id="@+id/textView141"
        android:layout_below="@+id/accessory_purchase_table"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/textView141"
        android:background="?android:attr/listDivider"
        android:id="@+id/view3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase_person_name"
        android:id="@+id/textView142"
        android:layout_alignBottom="@+id/purchase_person_name_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purchase_person_name_edit_text"
        android:ems="5"
        android:layout_below="@+id/view3"
        android:layout_toRightOf="@+id/textView142"
        android:layout_toEndOf="@+id/textView142"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purchase_date_edit_text"
        android:ems="5"
        android:editable="false"
        android:layout_below="@+id/textView142"
        android:layout_alignLeft="@+id/purchase_person_name_edit_text"
        android:layout_alignStart="@+id/purchase_person_name_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase_date"
        android:id="@+id/textView143"
        android:layout_alignBottom="@+id/purchase_date_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/supplier_name_edit_text"
        android:ems="5"
        android:layout_below="@+id/purchase_date_edit_text"
        android:layout_alignLeft="@+id/purchase_date_edit_text"
        android:layout_alignStart="@+id/purchase_date_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/supplier_name"
        android:id="@+id/textView144"
        android:layout_alignBottom="@+id/supplier_name_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView144"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/linear_layout_accept_button">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purchase_accept_button"
        android:src="@drawable/ic_action_accept"
        android:background="@color/blue"
        />
     <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/purchase_successful"
            android:layout_gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_cancel_button"
        android:layout_alignBottom="@+id/linear_layout_accept_button"
        android:layout_toRightOf="@+id/linear_layout_accept_button"
        android:layout_toEndOf="@+id/linear_layout_accept_button"
        android:layout_marginLeft="30dp">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purchase_cancel_button"
        android:src="@drawable/ic_action_cancel"
        android:background="@color/red"
     />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:text="@string/purchase_failed"
         android:layout_gravity="center"
         android:textSize="20dp"/>
    </LinearLayout>

</RelativeLayout>
</ScrollView>
</RelativeLayout>
