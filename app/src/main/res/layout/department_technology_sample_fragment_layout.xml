<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nju.zhizaolian.fragments.DepartmentTechnologySampleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout_linear">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/choose_name"
        android:layout_weight="1"
        android:id="@+id/sample_image_upload_button"/>

       <com.dd.CircularProgressButton
                android:id="@+id/sample_image_uploading_button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cpb_textComplete="@string/re_upload"
                app:cpb_textError="@string/error"
                app:cpb_textIdle="@string/upload"
                />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/want_upload"
        android:id="@+id/want_upload_string"
        android:layout_below="@+id/layout_linear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/sample_uploading_image_view"
        android:scaleType="fitCenter"
        android:layout_below="@+id/layout_linear"
        android:layout_toRightOf="@id/want_upload_string"
        android:layout_marginTop="20dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uploaded"
        android:id="@+id/uploaded_string"
        android:layout_below="@+id/sample_uploading_image_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/sample_uploaded_image_view"
        android:scaleType="fitCenter"
        android:layout_below="@+id/sample_uploading_image_view"
        android:layout_toRightOf="@+id/uploaded_string"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customer_technology_request"
        android:id="@+id/textView151"
        android:layout_below="@id/sample_uploaded_image_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_text"
        android:id="@+id/check_customer_technology_request_text"
        android:layout_alignTop="@id/textView151"
        android:layout_toRightOf="@+id/textView151"
        android:layout_toEndOf="@+id/textView151"
        android:layout_marginLeft="30dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/check_customer_technology_request_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider"
        android:id="@+id/view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_text"
        android:id="@+id/check_ironing_flower_cost_edit_text"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/check_customer_technology_request_text"
        android:layout_alignStart="@+id/check_customer_technology_request_text"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ironing_flower_cost"
        android:id="@+id/textView154"
        android:layout_alignTop="@+id/check_ironing_flower_cost_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_text"
        android:id="@+id/check_washing_cost_edit_text"
        android:layout_below="@+id/check_ironing_flower_cost_edit_text"
        android:layout_alignLeft="@+id/check_ironing_flower_cost_edit_text"
        android:layout_alignStart="@+id/check_ironing_flower_cost_edit_text"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/washing_cost"
        android:id="@+id/textView156"
        android:layout_below="@+id/check_ironing_flower_cost_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_text"
        android:id="@+id/check_laser_cost_text"
        android:layout_below="@+id/check_washing_cost_edit_text"
        android:layout_alignLeft="@+id/check_washing_cost_edit_text"
        android:layout_alignStart="@+id/check_washing_cost_edit_text"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/laser_cost"
        android:id="@+id/textView158"
        android:layout_below="@+id/check_washing_cost_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_text"
        android:id="@+id/check_embroidery_cost_edit_text"
        android:layout_below="@+id/check_laser_cost_text"
        android:layout_alignLeft="@+id/check_laser_cost_text"
        android:layout_alignStart="@+id/check_laser_cost_text"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/embroidery_cost"
        android:id="@+id/textView160"
        android:layout_below="@+id/check_laser_cost_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_text"
        android:id="@+id/check_crushed_cost_edit_text"
        android:layout_below="@+id/check_embroidery_cost_edit_text"
        android:layout_alignLeft="@+id/check_embroidery_cost_edit_text"
        android:layout_alignStart="@+id/check_embroidery_cost_edit_text"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crushed_cost"
        android:id="@+id/textView162"
        android:layout_alignTop="@+id/check_crushed_cost_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_text"
        android:id="@+id/check_plate_charge_cost_edit_text"
        android:layout_below="@+id/check_crushed_cost_edit_text"
        android:layout_alignLeft="@+id/check_crushed_cost_edit_text"
        android:layout_alignStart="@+id/check_crushed_cost_edit_text"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plate_charge_cost"
        android:id="@+id/textView164"
        android:layout_below="@+id/check_crushed_cost_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:id="@+id/view3"
        android:layout_below="@+id/check_plate_charge_cost_edit_text"
        android:background="?android:attr/listDivider"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sample_technology_leading_name_edit_text"
        android:ems="10"
        android:layout_below="@+id/view3"
        android:layout_alignLeft="@+id/check_plate_charge_cost_edit_text"
        android:layout_alignStart="@+id/check_plate_charge_cost_edit_text"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/technology_leading_name"
        android:id="@+id/textView166"
        android:layout_alignBottom="@+id/sample_technology_leading_name_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/technology_mass_complete_date"
        android:id="@+id/textView167"
        android:layout_alignBottom="@+id/sample_technology_mass_complete_date_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sample_technology_mass_complete_date_edit_text"
        android:ems="10"
        android:editable="false"
        android:layout_below="@+id/sample_technology_leading_name_edit_text"
        android:layout_alignLeft="@+id/sample_technology_leading_name_edit_text"
        android:layout_alignStart="@+id/sample_technology_leading_name_edit_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textView167"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" >
    <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sample_technology_mass_back_button"
            android:src="@drawable/ic_action_back"
            android:background="@drawable/back_button_selector"
            />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/sample_technology_mass_accept_button"
        android:src="@drawable/ic_action_accept"
        android:background="@drawable/commit_button_selector"
        />

    </LinearLayout>
</RelativeLayout>
</ScrollView>
</RelativeLayout>
