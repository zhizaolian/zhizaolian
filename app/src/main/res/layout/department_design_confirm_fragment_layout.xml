<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nju.zhizaolian.fragments.DepartmentDesignConfirmFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_version_file"
        android:id="@+id/textView152"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_name"
        android:id="@+id/design_confirm_choose_version_file_button"
        android:layout_below="@+id/textView152"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:scaleType="fitCenter"
        android:id="@+id/design_confirm_version_file_image_view"
        android:layout_below="@+id/design_confirm_choose_version_file_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:orientation="horizontal"
         android:layout_below="@+id/design_confirm_version_file_image_view"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true"
         android:layout_marginTop="20dp">
    <ImageButton
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:src="@drawable/ic_action_back"
             android:background="@drawable/back_button_selector"
             android:id="@+id/design_confirm_back_button"/>

         <com.dd.CircularProgressButton
             android:id="@+id/design_confirm_accept_button"
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:layout_weight="1"
             android:textColor="@color/white"
             android:enabled="false"
             android:textSize="12sp"
             app:cpb_textComplete="@string/completed"
             app:cpb_textError="@string/error"
             app:cpb_textIdle="@string/upload"/>

     </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
