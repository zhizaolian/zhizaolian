<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nju.zhizaolian.fragments.DepartmentPurchaseSweaterFragment">


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/inventory_radio_group"
        android:orientation="horizontal"
        android:checkedButton="@+id/inventory_enough_radio_button"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inventory_not_enough"
            android:id="@+id/inventory_not_enough_radio_button" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inventory_enough"
            android:id="@+id/inventory_enough_radio_button"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/supplier_name"
        android:id="@+id/textView145"
        android:layout_alignBottom="@+id/supplier_name_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/supplier_name_edit_text"
        android:ems="10"
        android:layout_below="@+id/inventory_radio_group"
        android:layout_toRightOf="@+id/textView145"
        android:layout_toEndOf="@+id/textView145"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purchase_person_name_edit_text"
        android:ems="10"
        android:editable="false"
        android:layout_below="@+id/textView145"
        android:layout_alignLeft="@+id/supplier_name_edit_text"
        android:layout_alignStart="@+id/supplier_name_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase_person_name"
        android:id="@+id/textView146"
        android:layout_alignBottom="@+id/purchase_person_name_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purchase_date_edit_text"
        android:ems="10"
        android:editable="false"
        android:layout_below="@+id/textView146"
        android:layout_alignLeft="@+id/purchase_person_name_edit_text"
        android:layout_alignStart="@+id/purchase_person_name_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase_date"
        android:id="@+id/textView147"
        android:layout_alignBottom="@+id/purchase_date_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sweater_type_edit_text"
        android:ems="10"
        android:layout_below="@+id/purchase_date_edit_text"
        android:layout_alignLeft="@+id/purchase_date_edit_text"
        android:layout_alignStart="@+id/purchase_date_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sweater_type"
        android:id="@+id/textView148"
        android:layout_alignBottom="@+id/sweater_type_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight_edit_text"
        android:ems="10"
        android:numeric="decimal"
        android:hint="@string/unit_kg"
        android:layout_below="@+id/textView148"
        android:layout_alignLeft="@+id/sweater_type_edit_text"
        android:layout_alignStart="@+id/sweater_type_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:id="@+id/textView149"
        android:layout_alignBottom="@+id/weight_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_price_edit_text"
        android:ems="10"
        android:numeric="decimal"
        android:hint="@string/unit_yuan"
        android:layout_below="@+id/weight_edit_text"
        android:layout_alignLeft="@+id/weight_edit_text"
        android:layout_alignStart="@+id/weight_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_price"
        android:id="@+id/textView150"
        android:layout_alignBottom="@+id/total_price_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textView150"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sweater_purchase_back_button"
            android:src="@drawable/ic_action_back"
            android:background="@drawable/back_button_selector"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sweater_purchase_submit_button"
            android:src="@drawable/ic_action_accept"
            android:background="@drawable/commit_button_selector"/>
    </LinearLayout>

</RelativeLayout>
