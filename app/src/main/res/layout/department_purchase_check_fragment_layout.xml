<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nju.zhizaolian.fragments.DepartmentPurchaseCheckFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/horizontalView">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fabric_cost"
        android:id="@+id/textView129"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:layout_below="@id/textView129"
        android:id="@+id/view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fabric_name"
        android:id="@+id/textView130"
        android:layout_alignBottom="@+id/fabric_name_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabric_name_edit_text"
        android:ems="5"
        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/textView130"
        android:layout_toEndOf="@+id/textView130"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numeric="decimal"
        android:id="@+id/fabric_weight_edit_text"
        android:ems="5"
        android:layout_below="@+id/textView130"
        android:layout_alignLeft="@+id/fabric_name_edit_text"
        android:layout_alignStart="@+id/fabric_name_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fabric_weight"
        android:id="@+id/textView131"
        android:layout_alignBottom="@+id/fabric_weight_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unit_m_cost_edit_text"
        android:numeric="decimal"
        android:ems="5"
        android:hint="@string/unit_m"
        android:layout_below="@+id/textView131"
        android:layout_alignLeft="@+id/fabric_weight_edit_text"
        android:layout_alignStart="@+id/fabric_weight_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unit_m_cost"
        android:id="@+id/textView132"
        android:layout_alignBottom="@+id/unit_m_cost_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_per_m_edit_view"
        android:numeric="decimal"
        android:ems="5"
        android:hint="@string/unit_yuan_per_m"
        android:layout_below="@+id/unit_m_cost_edit_text"
        android:layout_alignLeft="@+id/unit_m_cost_edit_text"
        android:layout_alignStart="@+id/unit_m_cost_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_per_m"
        android:id="@+id/textView133"
        android:layout_alignBottom="@+id/price_per_m_edit_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add"
        android:id="@+id/fabric_add_button"
        android:layout_below="@+id/textView133"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/department_purchase_check_fabric_table"
        android:layout_below="@+id/fabric_add_button"
        android:layout_marginTop="10dp">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fabric_name"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fabric_weight"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_m_cost"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_per_m"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/operate"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>
        </TableRow>

        </TableLayout>

 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accessory_cost"
        android:id="@+id/textView134"
        android:layout_below="@+id/department_purchase_check_fabric_table"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:layout_below="@id/textView134"
        android:id="@+id/view2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accessory_name"
            android:id="@+id/textView135"
            android:layout_alignBottom="@+id/accessory_name_edit_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accessory_name_edit_text"
            android:ems="5"
            android:layout_below="@+id/view2"
            android:layout_toRightOf="@+id/textView135"
            android:layout_toEndOf="@+id/textView135"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accessory_query_edit_text"
        android:numeric="decimal"
        android:ems="5"
        android:layout_below="@+id/accessory_name_edit_text"
        android:layout_alignLeft="@+id/accessory_name_edit_text"
        android:layout_alignStart="@+id/accessory_name_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accessory_query"
        android:id="@+id/textView136"
        android:layout_alignBottom="@+id/accessory_query_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accessory_per_cost_number_edit_text"
        android:numeric="decimal"
        android:ems="5"
        android:hint="@string/unit_one"
        android:layout_below="@+id/accessory_query_edit_text"
        android:layout_alignLeft="@+id/accessory_query_edit_text"
        android:layout_alignStart="@+id/accessory_query_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accessory_per_cost_number"
        android:id="@+id/textView137"
        android:layout_alignBottom="@+id/accessory_per_cost_number_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accessory_per_price_edit_text"
        android:numeric="decimal"
        android:ems="5"
        android:hint="@string/unit_yuan_per_m"
        android:layout_below="@+id/accessory_per_cost_number_edit_text"
        android:layout_alignLeft="@+id/accessory_per_cost_number_edit_text"
        android:layout_alignStart="@+id/accessory_per_cost_number_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accessory_per_price"
        android:id="@+id/textView138"
        android:layout_alignBottom="@+id/accessory_per_price_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add"
        android:id="@+id/accessory_add_button"
        android:layout_below="@+id/accessory_per_price_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accessory_add_button"
        android:layout_marginTop="10dp"
        android:id="@+id/department_purchase_check_accessory_table"
        >

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accessory_name"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accessory_query"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accessory_per_cost_number"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accessory_per_price"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/operate"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>
        </TableRow>

        </TableLayout>

    </RelativeLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/advice"
        android:id="@+id/textView139"
        android:layout_below="@+id/horizontalView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:layout_below="@+id/textView139"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:id="@+id/purchase_check_advice_text"
        android:layout_below="@+id/view3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/purchase_check_advice_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/production_check_back"
        android:src="@drawable/ic_action_back"
        android:background="@drawable/back_button_selector"
        />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/production_check_accept"
        android:background="@drawable/commit_button_selector"
        android:src="@drawable/ic_action_accept"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/production_check_cancel"
        android:src="@drawable/ic_action_cancel"
        android:background="@drawable/cancel_button_selector"
        />

    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
