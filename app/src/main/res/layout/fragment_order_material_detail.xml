<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nju.zhizaolian.fragments.OrderMaterialDetailFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="面料"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面料名称"
                android:id="@+id/textView34"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/materialName"
                android:layout_alignTop="@+id/textView34"
                android:layout_toRightOf="@+id/textView34"

                android:layout_alignRight="@+id/materialWeight"
                android:layout_alignEnd="@+id/materialWeight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面料克重"
                android:id="@+id/textView35"
                android:layout_below="@+id/materialName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/materialWeight"
                android:inputType="number"
                android:layout_below="@+id/materialName"
                android:layout_toRightOf="@+id/textView35"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                android:id="@+id/materialButton"
                android:layout_below="@+id/materialWeight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击添加之后数据生效"
                android:id="@+id/textView36"
                android:textColor="@android:color/holo_red_dark"
                android:layout_below="@+id/materialWeight"
                android:layout_toRightOf="@+id/materialButton"
                android:layout_toEndOf="@+id/materialButton"
                android:layout_marginTop="25dp" />

        </RelativeLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="99dp"
                android:id="@+id/materialLayout">
                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/materialaddListView"/>



            </LinearLayout>
            </ScrollView>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="170dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="辅料"
                android:id="@+id/textView37"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="辅料名称"
                android:id="@+id/textView38"
                android:layout_below="@+id/textView37"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accessoriesName"
                android:layout_below="@+id/textView37"
                android:layout_toRightOf="@+id/textView38"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="辅料要求"
                android:id="@+id/textView39"
                android:layout_below="@+id/accessoriesName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accessoriesWeight"
                android:layout_below="@+id/accessoriesName"
                android:layout_toRightOf="@+id/textView39"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                android:id="@+id/accessoriesButton"
                android:layout_below="@+id/accessoriesWeight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击添加之后数据生效"
                android:id="@+id/textView40"
                android:layout_alignBottom="@+id/accessoriesButton"
                android:layout_toRightOf="@+id/accessoriesButton"
                android:layout_toEndOf="@+id/accessoriesButton"
                android:textColor="@android:color/holo_red_dark" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/accessoriesLayout">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView3" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
