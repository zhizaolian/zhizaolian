                android:layout_height="wrap_content"
                android:id="@+id/produce_add_color_view"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_XS"/>
