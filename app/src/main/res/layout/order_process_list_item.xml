<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/ic_launcher"
        android:id="@+id/order_detail_image"
        android:scaleType="fitCenter"
        android:layout_weight="1"
        />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:paddingRight="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_style_name"
        android:textSize="30sp"
        android:layout_weight="1"
        android:id="@+id/order_process_list_item_style_name"
        android:textColor="@color/blue"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_number"
        android:id="@+id/textView112"
        android:textColor="@color/item_selector"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/new_text"
        android:id="@+id/order_process_list_item_order_number"
        android:textColor="@color/item_selector"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_start_date"
        android:id="@+id/textView113"
        android:textColor="@color/item_selector"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/new_text"
            android:id="@+id/order_process_list_item_order_start_date"
            android:textColor="@color/item_selector"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_state"
        android:id="@+id/textView114"
        android:textColor="@color/item_selector"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_text"
            android:gravity="right"
            android:id="@+id/order_process_list_item_order_state"
            android:textColor="@color/item_selector"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_salesman_name"
        android:id="@+id/textView115"
        android:textColor="@color/item_selector"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_text"
            android:gravity="right"
            android:id="@+id/order_process_list_item_order_salesman_name"
            android:textColor="@color/item_selector"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customer_name"
        android:id="@+id/textView116"
        android:textColor="@color/item_selector"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_text"
            android:gravity="right"
            android:id="@+id/order_process_list_item_customer_name"
            android:textColor="@color/item_selector"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customer_company_name"
        android:id="@+id/textView117"
        android:textColor="@color/item_selector"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/new_text"
            android:id="@+id/order_process_list_item_custom_company_name"
            android:layout_marginLeft="30dp"
            android:textColor="@color/item_selector"/>

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>





</LinearLayout>
